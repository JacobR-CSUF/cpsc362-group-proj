[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    migrations,
    node_modules,
    .next,
    dist,
    build

# E203: whitespace before ':'
# W503: line break before binary operator  
# E501: line too long (handled by max-line-length)
ignore = 
    E203,
    W503,
    E501

per-file-ignores =
    __init__.py:F401